@model User
<!--Modal Body Start-->

<div class="modal-content">

    <!--Modal Header Start-->
    <div class="modal-header">
        <h4 class="modal-title">Update User</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">×</span>
        </button>
    </div>
    <!--Modal Header End-->


    <form asp-action="Edit" asp-controller="User" method="post" enctype="multipart/form-data">

        @Html.AntiForgeryToken()

        <div class="modal-body form-horizontal">
            <div class="form-group row">
                @Html.HiddenFor(model => model.Id)
                @Html.LabelFor(model => model.Name, new { @class = "col-sm-2 col-form-label" })
                <div class="col-sm-10">
                    <input asp-for="@Model.Name" placeholder="Enter Name" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                @Html.LabelFor(model => model.Email, new { @class = "col-sm-2 col-form-label" })
                <div class="col-sm-10">
                    <input asp-for="@Model.Email" class="form-control" placeholder=" Please enter your Email" />
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.Salary, new { @class = "col-sm-2 col-form-label" })
                <div class="col-sm-10">
                    <input asp-for="@Model.Salary" class="form-control" placeholder="Please enter your Salary " />
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.City, new { @class = "col-sm-2 col-form-label" })
                <div class="col-sm-10">
                    <input asp-for="@Model.City" class="form-control" placeholder="Please enter your City " />
                </div>
            </div>

        </div>
        <!--Modal Footer Start-->
        <div class="modal-footer">
            <button data-dismiss="modal" id="cancel" class="btn btn-default" type="button">Cancel</button>
            <button class="btn btn-primary" id="btnSubmit" type="submit" value="Update">
                <i class="loader"></i>
                Update
            </button>
        </div>
        <!--Modal Footer End-->
    </form>

</div>


<!--Modal Body End-->