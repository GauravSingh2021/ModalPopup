@model IEnumerable<ModalPopup.Models.User>

@{
    ViewData["Title"] = "Index";
}

<a class="btn btn-success popup" data-url="User/CreateEdit" data-toggle="modal" data-target="#modal-create-edit-user" id="User">Add New User <i class="fa fa-plus"></i></a>
<partial name="_Modal" />


<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Email</th>
        <th>Salary</th>
        <th>City</th>
    </tr>
    @foreach (var list in Model)
    {
        <tr>
            <td>@list.Id</td>
            <td>@list.Name</td>
            <td>@list.Email</td>
            <td>@list.Salary</td>
            <td>@list.City</td>
            <td>

                <a class="btn btn-primary popup" data-url="@Url.Action("Edit","User", new { id=list.Id})" data-toggle="modal" data-target="#modal-edit-user" id="User" onclick="return confirm('Are you sure to update user record')">Edit<i class="fa fa-plus"></i></a>
                <partial name="_Modal" />

                <a class="btn btn-warning popup" data-url="@Url.Action("Details","User", new { id=list.Id})" data-toggle="modal" data-target="#modal-details-user" id="User">Details<i class="fa fa-plus"></i></a>
                <partial name="_Modal" />

                <a asp-action="Delete"
                   asp-controller="User" class="btn btn-danger" asp-route-id="@list.Id" onclick="return confirm('Are you sure to delete this record')">Delete</a>


            </td>



        </tr>
    }
</table>

@section Scripts{
    <script src="~/js/User.js" asp-append-version="true"></script>
}

